<UserControl x:Class="Microsoft.HandsFree.Keyboard.Controls.PauseMask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.HandsFree.Keyboard.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Rectangle Fill="Black" Opacity="0.75" Visibility="{Binding IsPaused, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
