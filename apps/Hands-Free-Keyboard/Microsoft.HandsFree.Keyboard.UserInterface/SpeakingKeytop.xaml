<UserControl x:Class="Microsoft.HandsFree.Keyboard.UserInterface.SpeakingKeytop"
             x:Name="control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.HandsFree.Keyboard.UserInterface"
             xmlns:control="clr-namespace:Microsoft.HandsFree.Keyboard.Controls;assembly=Microsoft.HandsFree.Keyboard.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <control:SpecialKeytop Keytop="{Binding Keytop, ElementName=control}" Command="{Binding Speak, ElementName=control}" RepeatMultiplier="{Binding RepeatMultiplier, ElementName=control}"/>
    </Grid>
</UserControl>
