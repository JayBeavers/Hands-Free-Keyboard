<UserControl x:Class="Microsoft.HandsFree.Keyboard.UserInterface.KeyboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:controls="clr-namespace:Microsoft.HandsFree.Keyboard.Controls;assembly=Microsoft.HandsFree.Keyboard.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.HandsFree.Keyboard.UserInterface"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Viewbox Grid.Row="5" x:Name="ScaleBox" HorizontalAlignment="Center" VerticalAlignment="Center">
            <controls:RenderedKeyboard x:Name="TheKeyboard" Width="1296" />
        </Viewbox>

    </Grid>
</UserControl>
